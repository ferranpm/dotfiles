order += "cpu_temperature 0"
order += "wireless wlan0"
order += "tztime local"

general {
  output_format = "i3bar"
  colors = false
  interval = 5
}

wireless wlan0 {
  # if you use %speed, i3status requires the cap_net_admin capability
  format_up = "W: %ip"
  format_down = "W: down"
}


tztime local {
  format = "%Y-%m-%d %H:%M"
}

cpu_temperature 0 {
  format = "T: %degrees Â°C"
  path = "/sys/devices/platform/coretemp.0/temp1_input"
}
