set $mod Mod1
set $win Mod4

exec ~/.i3/start

focus_follows_mouse no

new_window pixel 1
 
client.focused          #EEEEEE #AAAAAA #111111 #AAAAAA
client.focused_inactive #AAAAAA #111111 #AAAAAA #999999
 
bindsym $win+i exec firefox
bindsym $win+r exec rhythmbox
bindsym $win+m exec urxvtc -title CMUS -e /usr/bin/cmus
bindsym $win+f exec urxvtc -title ranger -e python3 /usr/bin/ranger
bindsym $win+n exec urxvtc -title RSS -e newsbeuter
bindsym $win+e exec setxkbmap es
bindsym $win+u exec setxkbmap us
bindsym $win+c exec xmodmap ~/dotfiles/Xmodmap
bindsym $win+p exec systemctl poweroff
bindsym $win+Up exec amixer set Master 1%+
bindsym $win+Down exec amixer set Master 1%-
bindsym Print exec scrot

assign [class="Qbittorrent"] 5
assign [class="Rhythmbox"] 5
assign [class="Skype"] 3
assign [class="Steam"] 3
assign [class="Thunderbird"] 3

for_window [class="MPlayer"] floating enable
