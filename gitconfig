[core]
	editor = vim
	pager = less -R
	autocrlf = input
	excludesfile = ~/.cvsignore
[color]
	diff = auto
	status = auto
	branch = auto
	ui = true
[merge]
	tool = vimdiff
[push]
	default = current
[web]
	browser = google-chrome-stable
[alias]
	a = add
	ap = add -p
	b = branch
	c = commit
	co = checkout
	dc = diff --cached
	dm = diff origin/master...
	d = diff
	l  = log --graph --oneline
	lm = log --graph --oneline HEAD origin/master
	lp = log -p
	m = merge
	s = status
[commit]
	verbose = yes
[sendemail]
	smtpencryption = tls
	smtpserver = smtp.gmail.com
	smtpuser = ferran.pel.mon@gmail.com
	smtpserverport = 587
[guitool "rm $FILENAME"]
	cmd = rm $FILENAME
	noconsole = yes
	needsfile = yes
[guitool "git checkout -- $FILENAME"]
	cmd = git checkout -- $FILENAME
	noconsole = yes
	needsfile = yes
[guitool "git log --graph --all --oneline --decorate=short"]
	cmd = git log --graph --all --oneline --decorate=short
[guitool "gitk --all"]
	cmd = gitk --all
	noconsole = yes
[fetch]
	prune = true
[pull]
	rebase = true
[rebase]
	autoStash = true
[init]
	defaultBranch = main
