    ui = true

[merge]
    tool = vimdiff

[push]
    default = current

[web]
    browser = firefox

[alias]
    b = branch
    c = commit --verbose
    co = checkout
    dt = difftool
    f = fetch
    l  = log --graph --all --oneline --decorate=short
    lo = log --graph --all --date=short --format='%C(yellow)%h %C(red)%ad%C(green)%d %C(reset)%s %C(blue)<%an>'
    m = merge
    p = push
    s = status
    v = describe --abbrev=0
    a = add
    ap = add -p
    dc = diff --cached
    d = diff
    di = diff --color-words

