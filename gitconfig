[user]
	name = Ferran Pelayo Monfort
	email = ferran.pel.mon@gmail.com

[core]
	editor = vim
	pager = less -R
	autocrlf = input
	excludesfile = ~/.cvsignore
[color]
	diff = auto
	status = auto
	branch = auto
	ui = true
[merge]
	tool = vimdiff
	ff = false
[push]
	default = current
[web]
	browser = google-chrome-stable
[alias]
	a = add
	ap = add -p
	b = branch
	c = commit --verbose
	co = checkout
	dc = diff --cached
	d = diff
	l  = log --graph --oneline --decorate=short
	lo = log --graph --oneline --date=short --format='%C(yellow)%h %C(red)%ad%C(green)%d %C(reset)%s %C(blue)<%an>'
	m = merge
	s = status
[sendemail]
	smtpencryption = tls
	smtpserver = smtp.gmail.com
	smtpuser = ferran.pel.mon@gmail.com
	smtpserverport = 587
[guitool "rm $FILENAME"]
	cmd = rm $FILENAME
	noconsole = yes
	needsfile = yes
[guitool "git checkout -- $FILENAME"]
	cmd = git checkout -- $FILENAME
	noconsole = yes
	needsfile = yes
[guitool "git log --graph --all --oneline --decorate=short"]
	cmd = git log --graph --all --oneline --decorate=short
[guitool "gitk --all"]
	cmd = gitk --all
	noconsole = yes
[fetch]
	prune = true
[pull]
	rebase = true
[rebase]
	autoStash = true
