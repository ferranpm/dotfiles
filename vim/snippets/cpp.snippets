extends c
snippet cout
	std::cout << ${1:""} << std::endl;${0}
snippet cin
	std::cin >> ${1:var};${0}
snippet fori
	for (int ${1:i} = 0; $1 < ${2:count}; $1++) {
		${3:/* code */}
	}${0}
snippet class
	#ifndef `toupper(expand("%:t:r"))`_H
	#define `toupper(expand("%:t:r"))`_H
	
	class ${1:`expand("%:t:r")`} : public ${2:QObject} {
		${3:Q_OBJECT}
		public:
			$1();${0}
		private:
	};
	
	#endif // `toupper(expand("%:t:r"))`_H
