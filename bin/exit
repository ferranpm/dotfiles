#!/usr/bin/bash

echo ' s) Shutdown'
echo ' r) Reboot'
echo ' l) Logout'
echo ' b) Lock'
echo ' c) Cancel'

while [[ $op != @('s'|'r'|'l'|'b'|'c') ]]; do
    read -sn 1 op
done

case $op in
    's')
        systemctl poweroff
        ;;
    'r')
        systemctl reboot
        ;;
    'l')
        wm_proc=$(ps -e | grep -e i3$ -e startkde$ | awk '{print $1}')
        kill -9 $wm_proc
        ;;
    'b')
        i3lock -ni $WALLPAPER
        ;;
    'c')
        echo 'Bye'
        ;;
esac
